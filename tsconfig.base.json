        "libs/shared/ui/button/src/index.ts"
      ],
      "@continental-hockey-next/shared/ui/card": [
        "libs/shared/ui/card/src/index.ts"
      ],
      "@continental-hockey-next/shared/ui/divider": [
        "libs/shared/ui/divider/src/index.ts"
      ],
      "@continental-hockey-next/shared/ui/field-set": [
        "libs/shared/ui/field-set/src/index.ts"
      ],
      "@continental-hockey-next/shared/ui/input": [
        "libs/shared/ui/input/src/index.ts"
      ],
      "@continental-hockey-next/shared/ui/logos": [
        "libs/shared/ui/logos/src/index.ts"
      ],
      "@continental-hockey-next/shared/ui/tab": [
        "libs/shared/ui/tab/src/index.ts"
      ],
      "@continental-hockey-next/shared/ui/table": [
        "libs/shared/ui/table/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
