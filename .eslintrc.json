{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "next:app",
                "onlyDependOnLibsWithTags": ["shared-api", "react:ui"]
              },
              {
                "sourceTag": "angular:app",
                "onlyDependOnLibsWithTags": [
                  "shared-api",
                  "angular:ui",
                  "angular:domain",
                  "angular:auth",
                  "angular:feature",
                  "angular:routing"
                ]
              },
              {
                "sourceTag": "angular:domain",
                "onlyDependOnLibsWithTags": [
                  "shared-api",
                  "angular:ui",
                  "angular:auth"
                ]
              },
              {
                "sourceTag": "angular:auth",
                "onlyDependOnLibsWithTags": ["shared-api", "angular:domain"]
              },
              {
                "sourceTag": "react:ui",
                "onlyDependOnLibsWithTags": ["shared-api"]
              },
              {
                "sourceTag": "angular:ui",
                "onlyDependOnLibsWithTags": ["shared-api"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-unused-vars": "off",
        "@typescript-eslint/ban-ts-comment": "off",
        "@typescript-eslint/no-empty-interface": "off"
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    },
    {
      "files": ["*.html"],
      "extends": ["plugin:@nrwl/nx/angular-template"],
      "rules": {
        "quotes": [
          "error",
          "double",
          {
            "avoidEscape": true
          }
        ]
      }
    }
  ]
}
