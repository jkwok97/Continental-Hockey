{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "next-app",
                "onlyDependOnLibsWithTags": ["shared-api", "ui-react"]
              },
              {
                "sourceTag": "angular-app",
                "onlyDependOnLibsWithTags": ["shared-api", "ui-angular"]
              },
              {
                "sourceTag": "ui-react",
                "onlyDependOnLibsWithTags": ["shared-api"]
              },
              {
                "sourceTag": "ui-angular",
                "onlyDependOnLibsWithTags": ["shared-api"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    }
  ]
}
